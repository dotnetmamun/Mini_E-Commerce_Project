@model IEnumerable<MiniMart.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>
<p><a class="btn btn-primary" asp-controller="Product" asp-action="Create">Add Product</a></p>
<table class="table table-bordered">
    <thead>
        <tr><th>Name</th><th>Price</th><th>Stock</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Product/Edit/@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Product/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>